#!/bin/bash

# Function to get and print DNS record information
get_dns_info() {
    local domain=$1
    local subdomain=$2
    local full_domain="${subdomain}.${domain}"
    local result=$(dig $full_domain | grep -A1 'ANSWER SECTION:' | tail -1)

    if [[ -n "$result" ]]; then
        local ip=$(echo $result | awk '{print $NF}')
        local record_type=$(echo $result | awk '{print $4}')
        echo "The subdomain $subdomain is a $record_type record and points to $ip"
    else
        echo "No DNS record found for $full_domain"
    fi
}

# Main script logic
domain=$1
subdomain=$2

if [[ -n "$domain" ]]; then
    if [[ -n "$subdomain" ]]; then
        get_dns_info $domain $subdomain
    else
        # Display info for predefined subdomains
        get_dns_info $domain "www"
        get_dns_info $domain "lb-01"
        get_dns_info $domain "web-01"
        get_dns_info $domain "web-02"
    fi
else
    echo "Domain name is required"
fi


