#!/bin/bash

# Check for required arguments
if [ $# -lt 1 ]; then
  echo "Usage: $0 <server_address>"
  echo "Example: $0 user@example.com"
  exit 1
fi

# Store the SSH public key 
PUBLIC_KEY="ssh-rsa "

# Specify the server address
SERVER_ADDRESS="54.157.135.103"

# Connect to the server and append the key
ssh "$SERVER_ADDRESS" "mkdir -p ~/.ssh && echo '$PUBLIC_KEY' >> ~/.ssh/authorized_keys"
